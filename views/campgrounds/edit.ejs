<%layout('layouts/boilerplate.ejs')%>
<div class= "row">
    <h1 class="text-center"> Edit Campground</h1>
    <div class="col-6 offset-3">
        <form method="POST" action="/campgrounds/<%=campground._id%>?_method=PUT" class="validate-this" enctype="multipart/form-data"  novalidate>
            <div class="mb-3">
                <label class="form-label" for="title"> Title</label>
                <input class="form-control" type="text" id="title" name="campground[title]" value="<%=`${campground.title}`%>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location"> Location</label>
                <input class="form-control" type="text" id="location" name="campground[location]" value="<%=campground.location%>" required>
            </div>
            <div>
                <label class="form-label" for="price"> Price</label>
                <div class="input-group mb-3">
                    <span class="input-group-text">Rs.</span>
                    <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)" id="price" name="campground[price]" value="<%=campground.price%>" required>
                </div>
            </div>
            <div class="input-group mb-3">
                <input type="file" class="form-control" id="image" name="image" multiple >
              </div>
            <div class="mb-3">
                <label class="form-label" for="description">description</label>
                <textarea class="form-control" id="description" name="campground[description]" required><%=campground.description%></textarea>
              </div>
<%if (campground.images.length){%>
              <p class="form-label">Select images you wish to delete:</p>
<%}%>
            <div class="mb3">
                <% campground.images.forEach(function(image,i){ %> 
                        
                    <div class="form-check-inline">
                        <input class="form-check-input" type="checkbox"  id="image-<%=i%>" name="deleteImages[]" value="<%=image.filename%>">
                        <label for="image-<%=i%>">
                          <img src="<%=image.thumbnail%>" class="img-thumbnail" value="<%=image.filename%> "> 
                        </label>
                      </div>
                <% }) %> 
            </div>

            <div class="mb-3">
                <button class="btn btn-dark"> SUBMIT</button>
            </div>
        </form>
        <a class="btn btn-outline-dark" href="<%=`/campgrounds/${campground.id}`%>" > Back</a>
    </div>
</div>

