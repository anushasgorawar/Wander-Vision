<%layout('layouts/boilerplate.ejs')%>
    <h1>ALL CAMPGROUNDS:</h1>
    <a href="/campgrounds/addnew">ADD CAMPGROUND</a>
    <ul>
        <%for(let cg of campgrounds){%>
            <div class="card" mb-3>
                <div class="row">
                    <div class="col-md-4">
                        <img class="img-fluid" src="<%= cg.image%> " alt="No img found">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <p><%= cg.title%> </p>
                            <p><%= cg.description%> </p>
                            <a class="btn btn-primary" href=<%=`/campgrounds/${cg.id}`%> >Details</a>
                        </div>
                    </div>
                </div>
            </div>
        <%}%>
    </ul>
