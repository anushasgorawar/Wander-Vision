<%layout('layouts/boilerplate.ejs')%>

<div class= "row text-white addshadow">
    <h1 class="text-center"> Add a new Location</h1>
    <div class="col-6 offset-3">
        <form method="POST" action="/campgrounds" class="validate-this" enctype="multipart/form-data" novalidate>
        <div class="mb-3">
            <label class="form-label formshadow" for="title"> Title</label>
            <input class="form-control" type="text" id="title" name="campground[title]" required>
        </div>
        <div class="mb-3">
            <label class="form-label formshadow" for="location"> City </label>
            <input class="form-control" type="text" id="location" name="campground[location]" required>
        </div>
